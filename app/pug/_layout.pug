block variables
  -
    var title = 'title'
    var description = 'description'

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title= title
    meta(name='description' content=description)
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap')
    link(rel='stylesheet' href='css/libs.min.css')
    link(rel='stylesheet' href='css/style.css')
  body(class=index ? '' : 'inner')
    header.header
      include components/_header.pug
    main.content
      block content
    footer.footer
      include components/_footer.pug
    include components/modals.pug
    #top.fas.fa-arrow-up.a-drop
    script(src='js/libs.min.js')
    script(src='js/scripts.js')
